{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": false,
    "strict": true,
    "stripInternal": true,
    "target": "ES2018",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"]
}
